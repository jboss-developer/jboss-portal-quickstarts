<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
    version="1.0">

    <!--
        This JustAddedPortlet is here just to demonstrate customization of navigation definitions and pages. We do not
        recommend adding portlets through Portal Extensions. We rather suggest using an extra WAR for every portlet instead.
    -->
    <portlet>
        <description xml:lang="EN">JustAdded Portlet</description>
        <portlet-name>JustAddedPortlet</portlet-name>
        <display-name xml:lang="EN">JustAdded Portlet</display-name>
        <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>

        <init-param>
            <name>webui.configuration</name>
            <value>/WEB-INF/conf/portlet/web/JustAddedPortlet/webui/configuration.xml</value>
        </init-param>

        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>help</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>

        <portlet-info>
            <title>JustAdded Portlet</title>
            <short-title>JustAdded Portlet</short-title>
            <keywords>Quickstarts</keywords>
        </portlet-info>

        <portlet-preferences>
            <preference>
                <name>template</name>
                <value>system:/templates/groovy/webui/component/UIJustAddedPortlet.gtmpl</value>
                <read-only>false</read-only>
            </preference>
        </portlet-preferences>
    </portlet>

</portlet-app>
